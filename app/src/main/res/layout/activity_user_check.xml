<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserCheck">

    <!--display pin dan kata-katanya-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Enter Your Pin Number"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="25sp"
            android:id="@+id/perintah"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" />

            <EditText
                android:id="@+id/password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:background="@null"
                android:ems="10"
                android:enabled="false"
                android:gravity="center_horizontal"
                android:inputType="numberPassword"
                android:text="******"
                android:textSize="30sp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/toogle_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@null"
                android:text="show"
                android:textSize="10sp" />
        </LinearLayout>

        <!--BUAT DEBUG SENSOR-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Pressure TouchDown"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/sensor_pressure_down"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Value"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Pressure TouchUp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/sensor_pressure_up"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Value"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Size TouchDown"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/sensor_size_down"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Value"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Size TouchUp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/sensor_size_up"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Value"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Pressed Duration"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/sensor_pressed_timer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Value"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <!--layout pinnumbernya-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:orientation="vertical"
        android:paddingBottom="5dp">
        <!--pinnumbernya-->

        <!--1,2,3-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pin_id_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_button_pin"
                android:layout_weight="1"
                android:text="1"
                android:textSize="30sp" />

            <Button
                android:id="@+id/pin_id_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_button_pin"
                android:layout_weight="1"
                android:text="2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/pin_id_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_button_pin"
                android:layout_weight="1"
                android:text="3"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pin_id_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_button_pin"
                android:layout_weight="1"
                android:text="4"
                android:textSize="30sp" />

            <Button
                android:id="@+id/pin_id_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_button_pin"
                android:layout_weight="1"
                android:text="5"
                android:textSize="30sp" />

            <Button
                android:id="@+id/pin_id_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_button_pin"
                android:layout_weight="1"
                android:text="6"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pin_id_7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_button_pin"
                android:layout_weight="1"
                android:text="7"
                android:textSize="30sp" />

            <Button
                android:id="@+id/pin_id_8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_button_pin"
                android:layout_weight="1"
                android:text="8"
                android:textSize="30sp" />

            <Button
                android:id="@+id/pin_id_9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_button_pin"
                android:layout_weight="1"
                android:text="9"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_button_pin"
                android:layout_weight="1"
                android:textSize="30sp"
                android:clickable="false"/>

            <Button
                android:id="@+id/pin_id_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_button_pin"
                android:layout_weight="1"
                android:text="0"
                android:textSize="30sp" />

            <Button
                android:id="@+id/pin_id_del"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_button_backspace"
                android:layout_weight="1"
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>